{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./dist/backend",
    "rootDir": "./src/backend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/backend/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/backend/types"
    ]
  },
  "include": ["src/backend/**/*"],
  "exclude": ["node_modules"]
}